@{
    
    Layout = null;
  
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>企业应用云平台</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    @*@Styles.Render("~/Content/themes/default/easyui.css") 
    @Scripts.Render("~/Scripts/jquery-1.8.0.min.js")
    @Scripts.Render("~/Scripts/jquery.easyui.min.js")*@
</head>
<body class="easyui-layout">
    <script type="text/javascript">
        function checkEntID() {
            var error = document.getElementById("EnterpriseIDerr")
            var EnID = document.getElementsByName("EnterpriseID")
            if (EnID[0].value.length <= 0)
                error.innerHTML = "*企业Id不能为空";
            else
                error.innerHTML = "";
        }
        function checkUseID() {
            var error = document.getElementById("UserIDerr")
            var EnID = document.getElementsByName("UserID")
            if (EnID[0].value.length <= 0)
                error.innerHTML = "*用户名不能为空";
            else
                error.innerHTML = "";
        }
        function checkPasWD() {
            var error = document.getElementById("Passworderr")
            var EnID = document.getElementsByName("Password")
            if (EnID[0].value.length <= 0)
                error.innerHTML = "*密码不能为空";
            else
                error.innerHTML = "";
        }
    </script>
<div  data-options="region:'north'"  style="height:70px;overflow:hidden">
    <img src="~/Content/Image/logohead.png" /></div>
<div data-options="region:'south'"   style="height:60px;text-align:center;background:#f1f1f1;overflow:hidden"><h2>CopyRight TongJiCAD 2013</h2></div>
<div data-options="region:'west'"  style="width:800px;border:hidden;text-align:right;vertical-align:central;background-color:#fcfefc;overflow:hidden;padding-top:40px">
    <img src="~/Content/Image/logo.png" />
</div>
<div data-options="region:'center'"  style="width:auto;background-color:#fcfefc;border:hidden;overflow:hidden;padding-top:60px">
     <div style="width:400px;height:345px;background-color:#fcfefc">
         <div style="border-bottom:2px solid rgba(167, 163, 163, 0.27)"><h1>欢迎登录</h1></div>
        <div style="padding:0 0 0 50px;margin-top:10px">
        <form id="LoginForm" method="post" action="Account/LoginSuccess">
            <div>
                <div>
                   <p style="font-size:20px">企业ID:<input class="easyui-validatebox" type="text" name="EnterpriseID" onblur="checkEntID()" style="height:20px;width:200px;border-radius:2px"/><span id="EnterpriseIDerr" style="color:red;font-size:15px"></span></p>
                </div>
                <div>
                    <p style="font-size:20px">用户名:<input  type="text" name="UserID" onblur="checkUseID()" style="height:20px;width:200px;border-radius:2px"/><span id="UserIDerr" style="color:red;font-size:15px"></span></p>
                </div>
                <div>
                    <p style="font-size:20px">密<a style="opacity:0">密</a>码:<input  type="password" name="Password" onblur="checkPasWD()" style="height:20px;width:200px;border-radius:2px"/><span id="Passworderr" style="color:red;font-size:15px"></span></p>
                </div>
                <div>
                 <p style="font-size:20px">验证码:<input type="text" name="PIN" data-options="required:true" style="height:20px;width:100px;border-radius:2px"/>
                     </p>
                </div>
                <div style="border-top:2px solid rgba(167, 163, 163, 0.27)">
                    <div style="float:right;margin:5px"> <a href="/Account/Create" class="easyui-linkbutton" style="font-size:15px">注&nbsp&nbsp册</a></div>
                    <div style="float:right;margin:5px"><Button  id="Submit" type="submit" style="border-radius:15px;font-size:15px;width:75px;background-color:#f1f1f1" >登&nbsp&nbsp录</Button></div>
                </div>
            </div>
        </form>
        </div>
    </div>
</div>
</body>  
    </html>