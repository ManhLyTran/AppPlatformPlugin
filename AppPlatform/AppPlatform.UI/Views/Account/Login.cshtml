@{
    
    Layout = null;
  
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>企业应用云平台</title>
    
    @Styles.Render("~/Content/themes/default/easyui.css") 

    @Scripts.Render("~/Scripts/jquery-1.8.0.min.js")
    @Scripts.Render("~/Scripts/jquery.easyui.min.js")
</head>
<body class="easyui-layout">
<div region="north"  split="false" style="height:100px;overflow:hidden">
    <img src="~/Content/Image/logohead.png" /></div>
<div region="south"  split="false" style="height:60px;text-align:center;background:#f1f1f1;overflow:hidden"><h2>CopyRight TongJiCAD 2013</h2></div>
<div region="west" split="false" style="width:800px;border:hidden;text-align:right;vertical-align:central;background-color:#fcfefc;overflow:hidden">
    <img src="~/Content/Image/logo.png" />
</div>
<div region="center"  style="width:auto;vertical-align:central;background-color:#fcfefc;border:hidden;overflow:hidden">
     <div style="width:400px;height:345px;background-color:#fcfefc">
         <div style="border-bottom:2px solid rgba(167, 163, 163, 0.27)"><h1>欢迎登录</h1></div>
        <div style="padding:0 0 0 50px;margin-top:10px">
        <form id="LoginForm" method="post" action="Account/LoginSuccess">
            <div>
                <div>
                   <p style="font-size:20px">企业ID:<input type="text" name="EnterpriseID" data-options="required:true" style="height:20px;width:200px;border-radius:2px"/></p>
                </div>
                <div>
                    <p style="font-size:20px">用户名:<input  type="text" name="UserID" data-options="required:true" style="height:20px;width:200px;border-radius:2px"/></p>
                </div>
                <div>
                    <p style="font-size:20px">密&nbsp&nbsp码:<input  type="password" name="Password" data-options="required:true" style="height:20px;width:200px;border-radius:2px"/></p>
                </div>
                <div>
                 <p style="font-size:20px">验证码:<input type="text" name="PIN" data-options="required:true" style="height:20px;width:100px;border-radius:2px"/>
                     </p>
                </div>
                <div style="border-top:2px solid rgba(167, 163, 163, 0.27)">
                    <div style="float:right;margin:5px;font-size:20px">@Html.ActionLink("注册","Create","Account")</div>
                    <div style="float:right;margin:5px;font-size:20px"><Button  id="Submit" type="submit">登录</Button></div>
                </div>
            </div>
        </form>
        </div>
    </div>
</body>  
    </html>